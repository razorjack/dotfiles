// Place your settings in this file to overwrite the default settings
{
    "editor.fontFamily": "SFMono-Regular, Anonymous Pro, Monaco, 'Courier New', monospace",
    "editor.lineHeight": 21,
    "editor.fontSize": 15,
    "editor.tabSize": 2,
    "vim.enableNeovim": false,
    "vim.leader": ",",
    "vim.useSystemClipboard": true,
    "vim.disableAnnoyingNeovimMessage": true,
    "workbench.activityBar.visible": false,
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "public/system/*": true,
        "public/uploads/*": true,
        "public/packs/*": true,
        "public/packs-test/*": true,
        "node_modules": true,
        "bower_components": true,
        "tmp/*": true,
        "coverage/*": true
    },
    "workbench.statusBar.visible": true,
    "workbench.colorCustomizations": {
        "statusBar.background" : "#303030",
        "statusBar.noFolderBackground" : "#222225",
        "statusBar.debuggingBackground": "#511f1f"
    },
    "terminal.integrated.fontFamily": "SFMono-Regular, Anonymous Pro, Monaco, 'Courier New', monospace",
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.lineHeight": 1.25,
    "terminal.integrated.cursorBlinking": true,
    "ruby.lint": {
        "reek": false,
        "rubocop": true,
        "ruby": true,
        "fasterer": true,
        "debride": false,
        "ruby-lint": false
    },
    "ruby.specCommand": "bin/rspec",
    "css.validate": false,
    "scss.validate": false,
    "stylelint.enable": true,
    "window.zoomLevel": 0,
    "editor.renderControlCharacters": true,
    "editor.renderWhitespace": "none",
    "files.insertFinalNewline": true,
    "search.quickOpen.includeSymbols": true,
    "editor.minimap.enabled": false,
    "workbench.editor.revealIfOpen": true,
    "workbench.fontAliasing": "antialiased",
    "workbench.startupEditor": "none",
    "workbench.tips.enabled": false,
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/**": true,
        "**/public/system/**": true,
        "**/public/uploads/**": true,
    },
    "search.useIgnoreFilesByDefault": true,
    "ruby.linter.run": "onSave",
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "emmet.showAbbreviationSuggestions": false,
    "editor.wordBasedSuggestions": true,
    "emmet.showExpandedAbbreviation": "never"
}
